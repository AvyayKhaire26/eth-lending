{
  "name": "eth-lending",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "node": "hardhat node",
    "deploy": "hardhat run scripts/deploy.ts --network localhost",
    "verify": "hardhat run scripts/verify-deployment.ts --network localhost",
    "copy-abis": "ts-node scripts/copy-abis.ts",
    "update-contracts": "npm run deploy && npm run copy-abis",
    "ml-api": "cmd /c \"ml-env\\Scripts\\activate.bat && cd ml-services && python api/ml_server.py\"",
    "start": "concurrently \"npm run node\" \"wait-on tcp:8545 && npm run deploy && npm run copy-abis && npm run verify\"",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "verify:sepolia": "hardhat run scripts/verify-deployment.ts --network sepolia",
    "dev": "cd frontend && npm run dev",
    "clean-all": "ts-node scripts/clean-all-data.ts",
    "fresh-start": "npm run clean-all && npm run start"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@openzeppelin/contracts": "^5.0.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.2.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "ethers": "^6.13.5",
    "hardhat": "^2.23.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "glob": "^7.2.3"
  }
}
